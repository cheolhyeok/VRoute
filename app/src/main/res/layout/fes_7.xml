<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- The toolbar -->
        <RelativeLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            >

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="48.5dp"
                android:layout_alignParentTop="true"
                android:background="@color/white"
                android:minHeight="?attr/actionBarSize"
                android:fitsSystemWindows="true"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                >

            </android.support.v7.widget.Toolbar>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저장"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/skyblue"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_below="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="230dp">

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="230dp">
            </android.support.v4.view.ViewPager>

            <ImageButton
                android:id="@+id/btn_previous"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/btn_pre"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:onClick="mOnClick"
                />

            <ImageButton
                android:id="@+id/btn_next"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/btn_next"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:onClick="mOnClick"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/fest_name"
            android:layout_below="@+id/layout2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="오오에도 온천 축제"
            android:textStyle="bold"
            android:textSize="20.5sp"
            android:textColor="@color/vroute"
            android:layout_marginTop="13dp"
            android:layout_centerHorizontal="true"
            >
        </TextView>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fest_name"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장소"
                android:textColor="@color/vroute"
                android:textSize="14sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/txt_place2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="코토구 아오미 2쵸메 6번 3호"
                android:textSize="13.5sp"
                android:layout_marginLeft="13dp"
                />

            <ImageButton
                android:id="@+id/btn_map"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/map_icon"
                android:layout_marginLeft="7.5dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout3"
            android:layout_marginTop="4.5dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일시"
                android:textColor="@color/vroute"
                android:textSize="14sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/txt_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18.01.01 ~ 18.12.31"
                android:textSize="13.5sp"
                android:layout_marginLeft="13dp"
                />


        </LinearLayout>

        <View
            android:id="@+id/section_line1"
            android:layout_below="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/gray"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="51dp"
            android:layout_marginRight="5dp"
            >
        </View>

        <LinearLayout
            android:id="@+id/layout5"
            android:layout_below="@+id/section_line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7.5dp"
            android:weightSum="4"
            android:layout_alignLeft="@+id/section_line1"
            android:layout_alignStart="@+id/section_line1">

            <LinearLayout
                android:id="@+id/layout1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <ImageButton
                    android:id="@+id/btn_heart"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/btn_heart"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/txt_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="추천"
                    android:textSize="13.5sp"
                    android:layout_marginTop="3dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/btn_search"
                    android:layout_width="20.5dp"
                    android:layout_height="20.5dp"
                    android:background="@drawable/btn_search"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/txt_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="검색"
                    android:textSize="13.5sp"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout1_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/btn_share"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/btn_share"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/txt_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="공유"
                    android:textSize="13.5sp"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout1_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/btn_review"
                    android:layout_width="20.5dp"
                    android:layout_height="20.5dp"
                    android:background="@drawable/btn_review"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/txt_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="리뷰 작성"
                    android:textSize="13.5sp"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/section_line2"
            android:layout_below="@+id/layout5"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/gray"
            android:layout_marginTop="7.5dp"
            android:layout_marginLeft="51dp"
            android:layout_marginRight="5dp"
            >
        </View>

        <LinearLayout
            android:id="@+id/layout6"
            android:layout_below="@+id/section_line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            >

            <TextView
                android:id="@+id/txt_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설명"
                android:textColor="@color/vroute"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/txt_read2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13.5sp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="5dp"
                android:text="@string/fes_text_7"
                android:lineSpacingExtra="6dip"
                />
        </LinearLayout>

        <View
            android:id="@+id/section_line3"
            android:layout_below="@+id/layout6"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/gray"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="51dp"
            android:layout_marginRight="5dp"
            >
        </View>

        <LinearLayout
            android:id="@+id/layout7"
            android:layout_below="@+id/section_line3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            >

            <TextView
                android:id="@+id/txt_review1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="리뷰"
                android:textColor="@color/vroute"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <kwon.cheolhyeok.vroute2.SquareImageView
                    android:id="@+id/pic_user"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/profile"
                    android:layout_marginTop="3.5dp"
                    android:layout_marginLeft="13dp"
                    android:scaleType="centerCrop"
                    />

                <TextView
                    android:id="@+id/id"
                    android:layout_toRightOf="@+id/pic_user"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cheolhyeok"
                    android:textStyle="bold"
                    />

                <ImageButton
                    android:id="@+id/heart5"
                    android:layout_width="80dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/heart_50"
                    android:scaleType="center"
                    >
                </ImageButton>

                <TextView
                    android:id="@+id/write"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id"
                    android:layout_toRightOf="@id/pic_user"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/fes_text_7_2"
                    android:textSize="13.5sp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:lineSpacingExtra="6dip"
                    />

                <LinearLayout
                    android:id="@+id/layout8"
                    android:layout_below="@id/pic_user"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_alignLeft="@+id/pic_user"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/pic_review1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/fes7_1"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:id="@+id/pic_review2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/fes7_4"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/review_more"
                    android:layout_below="@+id/layout8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="리뷰 더보기"
                    android:textSize="13sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="15dp"
                    />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>


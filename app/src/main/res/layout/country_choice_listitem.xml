<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/a_imageview"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/flipper1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#55000000"
        android:layout_alignBottom="@+id/a_imageview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/fest_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Club Style"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/fest_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Club Name"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/fest_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="Club Filter"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            />
    </RelativeLayout>


</RelativeLayout>

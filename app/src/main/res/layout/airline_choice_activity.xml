<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <!-- The toolbar -->
    <RelativeLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="48.5dp"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:minHeight="?attr/actionBarSize"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            >

        </android.support.v7.widget.Toolbar>


        <TextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/skyblue"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/menu_choice_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_layout"
        android:layout_marginTop="23dp"
        android:clickable="true"
        >

        <ImageButton
            android:id="@+id/icon1"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/air_1"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="4dp"
            />

        <TextView
            android:id="@+id/choice_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출발일"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/gray70"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/icon1"
            android:layout_marginLeft="16dp"
            />

        <TextView
            android:id="@+id/choice_1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018.08.24"
            android:textSize="19sp"
            android:layout_marginLeft="150dp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <View
        android:id="@+id/section_line1"
        android:layout_below="@+id/menu_choice_1"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/gray"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="58.5dp"
        android:layout_marginRight="13.5dp"
        >
    </View>

    <RelativeLayout
        android:id="@+id/menu_choice_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/section_line1"
        android:layout_marginTop="23dp"
        android:clickable="true"
        >

        <ImageButton
            android:id="@+id/icon2"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/air_1"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="14dp"
            />

        <TextView
            android:id="@+id/choice_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도착일"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/gray70"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/icon2"
            android:layout_marginLeft="16dp"
            />

        <TextView
            android:id="@+id/choice_2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018.08.26"
            android:textSize="19sp"
            android:layout_marginLeft="150dp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <View
        android:id="@+id/section_line2"
        android:layout_below="@+id/menu_choice_2"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/gray"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="58.5dp"
        android:layout_marginRight="13.5dp"
        >
    </View>

    <RelativeLayout
        android:id="@+id/menu_choice_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/section_line2"
        android:layout_marginTop="23dp"
        android:clickable="true"
        >

        <ImageButton
            android:id="@+id/icon3"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/air_2"
            android:layout_marginTop="5.5dp"
            android:layout_marginLeft="14dp"
            />

        <TextView
            android:id="@+id/choice_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출발지"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/gray70"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/icon3"
            android:layout_marginLeft="16dp"
            />

        <TextView
            android:id="@+id/choice_3_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서울 인천 (INC)"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:layout_marginLeft="150dp"
            android:layout_alignBaseline="@+id/choice_3"
            android:layout_alignBottom="@+id/choice_3"
            android:layout_centerVertical="true"/>



    </RelativeLayout>

    <View
        android:id="@+id/section_line3"
        android:layout_below="@+id/menu_choice_3"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/gray"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="58.5dp"
        android:layout_marginRight="13.5dp"
        >
    </View>

    <ImageButton
        android:id="@+id/change"
        android:layout_width="28dp"
        android:layout_height="14dp"
        android:scaleType="centerCrop"
        android:background="@drawable/air_5"
        android:layout_below="@+id/section_line3"
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true"
        />



    <RelativeLayout
        android:id="@+id/menu_choice_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/section_line3"
        android:layout_marginTop="23dp"
        android:clickable="true"
        >

        <ImageButton
            android:id="@+id/icon4"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/air_3"
            android:layout_marginTop="5.5dp"
            android:layout_marginLeft="14dp"
            />

        <TextView
            android:id="@+id/choice_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도착지"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/gray70"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/icon4"
            android:layout_marginLeft="16dp"
            />

        <TextView
            android:id="@+id/choice_4_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도쿄 나리타 (NAR)"
            android:textSize="19sp"
            android:layout_marginLeft="150dp"
            android:textColor="@color/black"
            android:layout_alignBaseline="@+id/choice_4"
            android:layout_alignBottom="@+id/choice_4"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <View
        android:id="@+id/section_line4"
        android:layout_below="@+id/menu_choice_4"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/gray"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="58.5dp"
        android:layout_marginRight="13.5dp"
        >
    </View>


    <RelativeLayout
        android:id="@+id/layout_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/section_line4"
        android:layout_marginTop="23dp"
        >


    <ImageButton
        android:id="@+id/air_5"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="14dp"
        android:background="@drawable/air_4"
        />
        
        
        
        <LinearLayout
            android:id="@+id/layout5_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/air_5"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:weightSum="3"
            >

        <LinearLayout
            android:id="@+id/layout5_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

        <TextView
            android:id="@+id/adult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성인"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginLeft="35dp"
                />
            <ImageButton
                android:id="@+id/btn"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/main_5"
                />
        </LinearLayout>

            <LinearLayout
                android:id="@+id/layout5_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/kids"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아동"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="35dp"
                    />
                <ImageButton
                    android:id="@+id/btn2"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/main_5"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout5_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/babys"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="유아"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="35dp"
                    />
                <ImageButton
                    android:id="@+id/btn3"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/main_5"
                    />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    <View
        android:id="@+id/section_line5"
        android:layout_below="@+id/layout_5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray70"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
    </View>

    <TextView
        android:id="@+id/air_txt1"
        android:layout_below="@+id/section_line5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/airport_txt"/>

    <TextView
        android:id="@+id/air_txt2"
        android:layout_below="@+id/air_txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/airport_txt2"/>




</RelativeLayout>
